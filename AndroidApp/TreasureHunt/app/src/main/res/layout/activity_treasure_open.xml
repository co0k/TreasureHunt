<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2">



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="You have opened a Treasure!"
        android:layout_weight="1.3"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:gravity="center"
        android:textSize="50dp"
        android:layout_gravity="center_horizontal|top" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_weight="0.7"

        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="You received: "
            android:textSize="@dimen/abc_text_size_large_material"
            android:id="@+id/you_received_text"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0.25" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Experience: "
            android:textSize="@dimen/abc_text_size_large_material"
            android:id="@+id/received_xp_text"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0.25" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Content: "
            android:textSize="@dimen/abc_text_size_large_material"
            android:id="@+id/received_content_text"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0.25" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Great!"
            android:id="@+id/btn_finish_open"
            android:onClick="onButtonFinishClick"
            android:layout_gravity="center"
            android:layout_weight="0.25" />






    </LinearLayout>



</LinearLayout>
