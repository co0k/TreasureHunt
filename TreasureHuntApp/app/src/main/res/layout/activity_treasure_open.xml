<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/papyrus_background"
              android:orientation="vertical"
              android:weightSum="2">


    <TextView
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|top"
        android:layout_weight="1.3"
        android:gravity="center"
        android:text="You have opened a Treasure!"
        android:textSize="50dp"/>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_weight="0.7"
        android:gravity="bottom"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/you_received_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="0.25"
            android:gravity="center"
            android:text="You received: "
            android:textSize="@dimen/abc_text_size_large_material"/>

        <TextView
            android:id="@+id/received_xp_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="0.25"
            android:gravity="center"
            android:text="Experience: "
            android:textSize="@dimen/abc_text_size_large_material"/>

        <TextView
            android:id="@+id/received_content_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="0.25"
            android:gravity="center"
            android:text="Content: "
            android:textSize="@dimen/abc_text_size_large_material"/>

        <Button
            android:id="@+id/btn_finish_open"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="0.25"
            android:background="@drawable/papyrus_button"
            android:onClick="onButtonFinishClick"
            android:text="Great!"/>


    </LinearLayout>


</LinearLayout>
