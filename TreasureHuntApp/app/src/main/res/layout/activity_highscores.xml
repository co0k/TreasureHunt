<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <ProgressBar android:id="@+id/load_highscore_progress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" android:visibility="gone"
        android:layout_gravity="center"
        />

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/highscoreLayout"
    android:background="@drawable/papyrus_background">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Highscores"
        android:layout_weight="1.3"
        android:id="@+id/highscore_list_header"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:gravity="center"
        android:textSize="50dp"
        android:layout_gravity="center_horizontal|top" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/highscoreListView"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="0.7"
        />

</LinearLayout>
    </LinearLayout>